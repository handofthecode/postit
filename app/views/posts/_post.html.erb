<div class="row">
	<div class='span0 well text-center'>
		<% if logged_in? %>
			<%= link_to vote_post_path(post, vote: true), method: 'post' do %>
				<i class='icon-arrow-up'></i>
			<% end %>
			<br/>
		<% end %>
		<%= "#{post.total_votes} votes"%>
		<br/>
		<% if logged_in? %>
			<%= link_to vote_post_path(post, vote: false), method: 'post' do %>
				<i class='icon-arrow-down'></i>
			<% end %>
		<% end %>
	</div>

	<div class="span8 well">
		<%= render post.categories %>
		<h4><%= link_to post.title, fix_url(post.url) %></h4>
		<p><%= post.description %></p>
		<p>
			<span class="quiet">by</span>
			<%= link_to post.creator.username, posts_path %> <!-- change link to user account -->
			<span class="quiet">on <%= display_datetime(post.creator.created_at) %></span>
		</p>
		<br>
		<small><%= link_to (post.comments.size.to_s + " comments"), post_path(post) %></small>
	</div>
</div>